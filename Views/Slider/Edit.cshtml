                @Html.EditorFor(model => model.ResimUrl, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ResimUrl, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-primary" style="margin-top:10px">KAYDET</button>
                <button type="reset" class="btn btn-warning" style="margin-top:10px"> <a href="/Slider/Index"> GERİ DÖN</a> </button>
            </div>
        </div>
    </div>
}

